@model Project_Builder_Development.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
}

<div class="row" 
     style="padding-top:80px;">
    <div class="col-md-12">
        <section id="forgotPasswordForm">
            @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <div class="container" 
                     style="height: initial;">
                    <div class="row"
                         style="padding-top:80px;">
                        <div class="Absolute-Center is-Responsive" 
                             style="margin:auto; top:0; left:0; bottom:0; right:0; height:50%; padding:40px; min-width:200px; max-width:400px; padding:40px;">
                            <div class="col-md-12">
                                <div class="title" 
                                     style="display:flex; justify-content:center;">
                                    <h3>FORGOT PASSWORD</h3>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <form action="" id="forgotPasswordForm">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                    </div>
                                    <div class="login-btn">
                                        <input type="submit" class="btn btn-default" value="Send" 
                                               style="width:100%; background-color:#333; color:#9d9d9d"/>
                                    </div>
                                    @Html.ValidationSummary("", new { @class = "text-danger" })
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </section>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
